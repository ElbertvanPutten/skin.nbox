<window id="601">
	<defaultcontrol>32</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>HomeBackground</include>
		<include>BarClock</include>

		<control type="group">
			<animation type="WindowClose">
				<effect type="fade" time="300"/>
				<effect type="slide" end="+1500,0" time="300"/>
			</animation>
			<animation type="WindowOpen">
				<effect type="fade" time="300"/>
				<effect type="slide" start="+1500,0" time="300"/>
			</animation>

			<control type="label">
				<label>live tv</label>
				<posx>70</posx>
				<posy>170</posy>
				<height>30</height>
				<width>400</width>
				<font>Home_header</font>
				<textcolor>White</textcolor>
				<align>left</align>
			</control>

			<control type="group">
				<description>Small Media Window</description>
				<posx>530</posx>
				<posy>80</posy>
				<visible>Control.IsVisible(11) | Control.IsVisible(12)</visible>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>690</width>
					<height>400</height>
					<texture border="5">button-nofocus.png</texture>
				</control>
				<control type="image">
					<posx>5</posx>
					<posy>5</posy>
					<width>680</width>
					<height>390</height>
					<texture fallback="special://skin/backgrounds/shutdown.jpg">$INFO[Skin.String(Home_Custom_Back_TV_Folder)]</texture>
					<include>VisibleFadeEffect</include>
					<visible>!Player.HasVideo</visible>
				</control>
				<control type="videowindow">
					<posx>5</posx>
					<posy>5</posy>
					<width>680</width>
					<height>390</height>
					<visible>Player.HasVideo</visible>
					<animation effect="slide" start="0,0" end="-2000,0" time="0">WindowClose</animation>
				</control>
				<control type="label">
					<description>Current Video label</description>
					<posx>30</posx>
					<posy>1</posy>
					<width>650</width>
					<height>35</height>
					<font>font12</font>
					<textcolor>grey2</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[VideoPlayer.Title]</label>
					<visible>Player.HasVideo</visible>
				</control>
			</control>

			<control type="group" id="50">
				<include>EPGTimelineView</include>
				<include>LiveTVChannelView</include>
				<include>LiveRadioChannelView</include>
				<include>LiveTVRecordingsView</include>
				<include>LiveTVTimersView</include>
				<include>LiveTVGuideChannelView</include>
				<include>LiveTVGuideNowNextView</include>
				<include>LiveTVSearchView</include>
			</control>

		</control>

		<control type="image">
			<posx>-12</posx>
			<posy>174</posy>
			<width>72</width>
			<height>72</height>
			<texture background="true">other_textures/osd/playlistnf.png</texture>
			<aspectratio scalediffuse="false">stretch</aspectratio>
			<animation effect="slide" start="0,0" end="-100,0" time="300" condition="ControlGroup(9000).HasFocus()" reversible="false">Conditional</animation>
			<animation effect="slide" start="-100,0" end="0,0" time="300" delay="100" condition="!ControlGroup(9000).HasFocus()" reversible="false">Conditional</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0,0" end="-100,0" time="200" />
			</animation>
			<animation type="WindowOpen">
				<effect type="slide" start="-100,0" end="0,0" time="200" delay="100" />
			</animation>
			<animation type="Hidden">
				<effect type="slide" start="0,0" end="-100,0" time="200" />
			</animation>
			<animation type="Visible">
				<effect type="slide" start="-100,0" end="0,0" time="200" delay="100" />
			</animation>
		</control>

		<control type="image">
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="fade" time="300" start="100" end="0" />
			</animation>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture border="2">other_textures/black-back.png</texture>
		</control>

		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>305</width>
			<height>720</height>
			<texture border="22">button.png</texture>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="slide" start="0,0" end="-305,0" time="300" easing="out" tween="cubic"/>
			</animation>
		</control>

		<control type="grouplist" id="9000">
			<posx>30</posx>
			<posy>140</posy>
			<width>240</width>
			<height>600</height>
			<itemgap>0</itemgap>
			<onleft>50</onleft>
			<onright>50</onright>
			<onup></onup>
			<ondown></ondown>
			<orientation>vertical</orientation>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="slide" start="0,0" end="-305,0" time="300" easing="out" tween="cubic"/>
			</animation>

			<control type="button" id="32">
				<description>TV Channels</description>
				<width>240</width>
				<align>left</align>
				<font>small</font>
				<textcolor>black</textcolor>
				<label>19023</label>
			</control>
			<control type="button" id="33">
				<description>Radio Channels</description>
				<width>240</width>
				<align>left</align>
				<font>small</font>
				<textcolor>black</textcolor>
				<label>19024</label>
				<onleft>12</onleft>
				<onright>12</onright>
			</control>
			<control type="button" id="31">
				<description>TV Guide</description>
				<width>240</width>
				<align>left</align>
				<font>small</font>
				<textcolor>black</textcolor>
				<label>$LOCALIZE[19222]: $LOCALIZE[19030]</label>
			</control>
			<control type="button" id="34">
				<description>Recordings</description>
				<width>240</width>
				<align>left</align>
				<font>small</font>
				<textcolor>black</textcolor>
				<label>19163</label>
			</control>
			<control type="button" id="35">
				<description>Timers</description>
				<width>240</width>
				<align>left</align>
				<font>small</font>
				<textcolor>black</textcolor>
				<label>19040</label>
			</control>
			<control type="button" id="36">
				<description>Search</description>
				<width>240</width>
				<align>left</align>
				<font>small</font>
				<textcolor>black</textcolor>
				<label>137</label>
			</control>
		</control>
	</controls>
</window>
