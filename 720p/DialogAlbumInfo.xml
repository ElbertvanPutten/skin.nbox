<window id="2001">
	<defaultcontrol always="true">9001</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<control type="group">

			<animation type="WindowClose">
				<effect type="fade" time="300"/>
				<effect type="slide" end="+1500,0" time="300"/>
			</animation>
			<animation type="WindowOpen">
				<effect type="fade" time="300"/>
				<effect type="slide" start="+1500,0" time="300"/>
			</animation>

			<control type="group">
				<posx></posx>
				<posy></posy>

				<control type="image">
					<posx>679</posx>
					<posy>288</posy>
					<width>466</width>
					<height>315</height>
					<texture>music_fanart_diffuse.png</texture>
				</control>

				<control type="image">
					<description>Cover Image</description>
					<posx>230</posx>
					<posy>180</posy>
					<width>424</width>
					<height>424</height>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio align="right" aligny="center">stretch</aspectratio>
					<bordertexture border="5">white_box.png</bordertexture>
					<bordersize>5</bordersize>
				</control>

				<control type="fadelabel" id="140">
					<posx>682</posx>
					<posy>171</posy>
					<height>30</height>
					<width>598</width>
					<font>Home_menu</font>
					<aligny>top</aligny>
					<label>[COLOR Accent]$INFO[ListItem.Album][/COLOR] $INFO[ListItem.Year]</label>
					<visible>true</visible>
					<scroll>true</scroll>
					<scrollout>false</scrollout>
					<pauseatend>600</pauseatend>
					<scrollspeed>50</scrollspeed>
					<visible>Container.Content(Albums)</visible>
				</control>

				<control type="fadelabel" id="140">
					<posx>682</posx>
					<posy>171</posy>
					<height>30</height>
					<width>598</width>
					<font>Home_menu</font>
					<aligny>top</aligny>
					<label>[COLOR Accent]$INFO[ListItem.Artist][/COLOR]</label>
					<visible>true</visible>
					<scroll>true</scroll>
					<scrollout>false</scrollout>
					<pauseatend>600</pauseatend>
					<scrollspeed>50</scrollspeed>
					<visible>Container.Content(Artists)</visible>
				</control>

				<control type="grouplist">
					<visible>Container.Content(Albums)</visible>
					<posx>682</posx>
					<posy>230</posy>
					<width>590</width>
					<height>112</height>
					<itemgap>0</itemgap>
					<orientation>vertical</orientation>

					<control type="label">
						<description>Artist</description>
						<width>530</width>
						<height>28</height>
						<label>$LOCALIZE[557]: [B]$INFO[ListItem.Artist][/B]   [COLOR Accent][B]$INFO[ListItem.Genre,,$LOCALIZE[515]: ][/B][/COLOR]</label>
						<scroll>true</scroll>
					</control>

					<control type="image">
						<width>100</width>
						<height>25</height>
						<texture>other_textures/colorrating/$INFO[ListItem.StarRating]</texture>
						<visible>!IsEmpty(ListItem.Rating)</visible>
					</control>
				</control>

				<control type="grouplist">
					<visible>Container.Content(Artists)</visible>
					<posx>682</posx>
					<posy>230</posy>
					<width>590</width>
					<height>112</height>
					<itemgap>0</itemgap>
					<orientation>vertical</orientation>

					<control type="label">
						<description>Artist</description>
						<width>530</width>
						<height>28</height>
						<label>$LOCALIZE[515]: [B]$INFO[ListItem.Genre][/B]</label>
						<scroll>true</scroll>
						<visible>!IsEmpty(ListItem.Genre)</visible>
					</control>

					<control type="image">
						<width>100</width>
						<height>25</height>
						<texture>other_textures/colorrating/$INFO[ListItem.StarRating]</texture>
						<visible>!IsEmpty(ListItem.Rating)</visible>
					</control>

				</control>

				<control type="textbox" id="4">
					<description>Review</description>
					<posx>700</posx>
					<posy>302</posy>
					<width>420</width>
					<height>245</height>
					<align>justify</align>
					<pagecontrol>60</pagecontrol>
				</control>

				<control type="spincontrol" id="60">
					<posx>980</posx>
					<posy>554</posy>
					<width>46</width>
					<height>30</height>
					<visible></visible>
					<subtype>page</subtype>
					<font>-</font>
					<textureup>-</textureup>
					<textureupfocus>-</textureupfocus>
					<texturedown>-</texturedown>
					<texturedownfocus>-</texturedownfocus>
					<pulseonselect>no</pulseonselect>
					<onup>50</onup>
					<onleft>9000</onleft>
					<onright>60</onright>
					<ondown>50</ondown>
					<showonepage>true</showonepage>
				</control>

				<control type="list" id="50">
					<description>Tracks</description>
					<posx>680</posx>
					<posy>288</posy>
					<width>465</width>
					<height>240</height>
					<onup>50</onup>
					<ondown>50</ondown>
					<onleft>9001</onleft>
					<onright>50</onright>
					<orientation>vertical</orientation>
					<scrolltime>200</scrolltime>

					<itemlayout height="46">
						<control type="image">
							<width>580</width>
							<height>44</height>
							<texture border="2">other_textures/buttonnf.png</texture>
						</control>

						<control type="label">
							<posx>20</posx>
							<width>540</width>
							<info>ListItem.Label</info>
						</control>
					</itemlayout>

					<focusedlayout height="46">
						<control type="image">
							<width>580</width>
							<height>44</height>
							<texture border="5">other_textures/buttonfo.png</texture>
							<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(50)">Conditional</animation>
						</control>

						<control type="label">
							<posx>20</posx>
							<width>540</width>
							<info>ListItem.Label</info>
						</control>
					</focusedlayout>

				</control>

				<control type="grouplist" id="9001">
					<posx>25</posx>
					<posy>240</posy>
					<width>180</width>
					<height>430</height>
					<itemgap>-</itemgap>
					<onup>9000</onup>
					<ondown>9000</ondown>
					<onright>60</onright>
					<onleft>9001</onleft>
					<orientation>vertical</orientation>

					<control type="button" id="5">
						<description>Tracks</description>
						<label>206</label>
						<width>180</width>
						<align>right</align>
						<focusedcolor>Accent</focusedcolor>
						<onclick condition="SubString(Control.GetLabel(5),Review)">right</onclick>
						<onclick condition="SubString(Control.GetLabel(5),Review)">down</onclick>
					</control>

					<control type="button" id="6">
						<description>Refresh button</description>
						<width>180</width>
						<align>right</align>
						<label>184</label>
						<focusedcolor>Accent</focusedcolor>
					</control>

					<control type="button" id="10">
						<description>Poster</description>
						<width>180</width>
						<align>right</align>
						<label>Poster</label>
						<focusedcolor>Accent</focusedcolor>
					</control>

					<control type="button" id="12">
						<description>Art</description>
						<width>180</width>
						<align>right</align>
						<label>Art</label>
						<focusedcolor>Accent</focusedcolor>
					</control>
				</control>

			</control>

		</control>

	</controls>
</window>